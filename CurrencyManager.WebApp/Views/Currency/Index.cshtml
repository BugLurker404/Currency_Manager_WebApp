@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}
@model List<Currency>

    <body>
        <div class="bg-image" 
     style="background-image: url('https://img.freepik.com/free-vector/digital-money-transfer-technology-background_1017-17454.jpg?w=740&t=st=1674494742~exp=1674495342~hmac=4c654da002e7f845248944652194e2648e6cde97db5f3b5e37fb0e5b7a28c274');
            height: 100vh">
</div>

    
    <table class="table table-dark">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Code</th>
            </tr>
        </thead>
        @{
            int rowNumber = 0;
            foreach (var currency in Model)
            {
                <tr>
                    <th scope="row">@rowNumber</th>
                    <td>@currency.Name</td>
                    <td>@currency.Code</td>
                </tr>
                rowNumber++;
            }
        }
    </table>
</div>
</body>