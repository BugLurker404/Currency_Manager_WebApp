@{
    ViewData["Title"] = "Home Page";
}
@model List<Currency>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Code</th>
            </tr>
        </thead>
        @{
            int rowNumber = 0;
            foreach (var currency in Model)
            {
                <tr>
                    <th scope="row">@rowNumber</th>
                    <td>@currency.Name</td>
                    <td>@currency.Code</td>
                </tr>
                rowNumber++;
            }
        }
    </table>
</div>